{
  "name": "nextcloud-door-estimator",
  "version": "1.0.0",
  "description": "A Nextcloud app frontend for door estimation, built with TypeScript and Vue using Nextcloud's official webpack config.",
  "author": "Nextcloud Community",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "main": "js/door-estimator.js",
  "types": "types/nextcloud.d.ts",
  "files": [
    "src/",
    "js/door-estimator.js",
    "js/door-estimator.js.map",
    "types/",
    "webpack.config.js",
    "jest.config.js",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "not dead",
    "defaults"
  ],
  "dependencies": {
    "typescript": "^5.4.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@vue/compiler-sfc": "^3.5.18",
    "@vue/test-utils": "^2.4.0-alpha.2",
    "@vue/vue3-jest": "^29.2.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "source-map-loader": "^4.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "vue-loader": "^17.4.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build": "webpack --mode production --config webpack.config.js",
    "build:dev": "webpack --mode development --devtool source-map --config webpack.config.js",
    "test": "jest --config jest.config.js",
    "start": "webpack serve --mode development --open --config webpack.config.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "config": "./jest.config.js"
  }
