{
  "name": "nextcloud-door-estimator",
  "version": "1.0.0",
  "description": "A Nextcloud app frontend for door estimation, built with React and TypeScript using Nextcloud's official webpack config.",
  "author": "Nextcloud Community",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "main": "js/door-estimator.js",
  "types": "types/nextcloud.d.ts",
  "files": [
    "src/",
    "js/door-estimator.js",
    "js/door-estimator.js.map",
    "types/",
    "webpack.config.js",
    "jest.config.js",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "not dead",
    "defaults",
    "ES2020"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.321.0",
    "typescript": "^5.4.0",
    "@nextcloud/webpack-config": "^6.0.0"
  },
  "devDependencies": {
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.12",
    "source-map-loader": "^4.0.1"
  },
  "scripts": {
    "build": "webpack --mode production --config webpack.config.js",
    "build:dev": "webpack --mode development --devtool source-map --config webpack.config.js",
    "test": "jest --config jest.config.js",
    "start": "webpack serve --mode development --open --config webpack.config.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "config": "./jest.config.js"
  }
