{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "js/**/*.ts",
    "utils/**/*.ts",
    "tests/**/*.ts",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}